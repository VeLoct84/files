<FirstScreen>:
	GridLayout:
		cols: 1
		padding: 10
		spacing: 5

		Image:
			id: img123
			size_hint_y: 0.8
		TextInput:
			id: user_query
			text_name: "verdana"
			size_hint_y: 0.1
		Button:
			size_hint_y: 0.1
			text: 'Search Images'
			on_press: root.set_images()
			on_press: root.info()
			
		ScrollView:
			Label:
				id: summary
				text: ""
				text_size: self.width, None
				size_hint_y: None
				height: self.texture_size[1]

<RootWidget>:
	FirstScreen:
		id: first_screen
		name: "First Screen"
